[includeIf "gitdir:~/"]
    path = .gitconfig_personal
[includeIf "gitdir:~/github/niceoutside/"]
    path = .gitconfig_niceoutside

[core]
    editor = vim
    autocrlf = input
    fsmonitor = true
[push]
    default = current
	autoSetupRemote = true
[pull]
    rebase = false
[init]
    defaultBranch = main
